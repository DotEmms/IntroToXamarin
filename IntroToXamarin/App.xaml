<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntroToXamarin.App">
    <Application.Resources>

        <ResourceDictionary>
            <Color x:Key="blueColour">DodgerBlue</Color>
            <Color x:Key="textColour">#fff</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColour}"/>
                <Setter Property="TextColor" Value="{StaticResource textColour}"/>
                <Setter Property="Margin" Value="20"/>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource blueColour}"/>
                <Setter Property="Margin" Value="10"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="Margin" Value="20"/>
            </Style>

            <Style TargetType="Button" x:Key="SpecialButtonStyle">
                <Setter Property="BackgroundColor" Value="Red"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>